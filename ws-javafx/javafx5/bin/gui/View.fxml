   <children>
      <Label layoutX="30.0" layoutY="36.0" text="Calculate Sum">
         <font>
            <Font name="Lucida Console" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumberOne" layoutX="30.0" layoutY="89.0" promptText="First Number" />
      <TextField fx:id="txtNumberTwo" layoutX="30.0" layoutY="138.0" promptText="Other Number" />
      <Button fx:id="btSum" layoutX="30.0" layoutY="187.0" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum" />
      <Label layoutX="70.0" layoutY="233.0" text="Result =">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label fx:id="labelResult" layoutX="187.0" layoutY="241.0">
         <font>
            <Font name="Lucida Console" size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
